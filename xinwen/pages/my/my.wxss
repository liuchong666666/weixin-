/* 登录页面 */
.myLogin{
  height:400rpx;
  background-color: #328EEB;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-around; 
}
.myLogin image{
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
}
.myLogin text{
  color:white;
}
/* 收藏夹 */
.myFavorite{
  margin-top: 20rpx;
}
/* 登录按钮 */
.loginBtn{
  cursor: pointer;
  width: 400rpx;
  background-color: #328EEB;
  /* background-color: black; */
  color:white;
  margin: 10rpx auto;
}
.loginBtn:active{
  background-color: rgb(15, 194, 248);
}

.loginShow{
    display: block;
}
.loginHide{
    display: none;
}